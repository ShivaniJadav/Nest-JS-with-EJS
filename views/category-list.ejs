<body>
  <div class="container-scroller">
    <!-- partial:../../partials/_navbar.html -->
    <%- include('partials/_navbar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        <%- include('partials/_sidebar') %>
          <!-- partial -->
          <div class="main-panel">
            <div class="content-wrapper">
              <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <div class="col-lg-8">
                        <h2><b>Categories</b>
                        </h2>
                      </div>
                      <div style="text-align:right;">
                        <a class="btn btn-primary btn-fw" style="background-color: #1c45ef; margin-right: 1px;"
                          href="/categories/add">Add Category</a>
                      </div>
                      <br>
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th> Name </th>
                            <th> Description </th>
                            <th> Status </th>
                            <th> Actions </th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if (categorylist.length) { %>
                            <% for( let i=0; i < categorylist.length; i++ ) { %>
                              <tr>
                                <td>
                                  <%= categorylist[i].name %>
                                </td>
                                <td>
                                  <%= categorylist[i].description %>
                                </td>
                                <td>
                                  <% if (categorylist[i].is_active) { %>
                                    <label class="badge badge-success">Active</label>
                                    <% } else { %>
                                      <label class="badge badge-danger">Inactive</label>
                                      <% } %>
                                </td>
                                <td>
                                  <a href="/categories/<%= categorylist[i].category_id %>"><i class="fa fa-pencil"
                                      style="font-size: 20px;"></i>
                                  </a> &nbsp; | &nbsp;
                                  <a><i class="fa fa-trash-o deletelink"
                                      id="deletelink-<%= categorylist[i].category_id %>" style="font-size: 20px;"></i>
                                  </a>
                                </td>
                              </tr>
                              <% } %>
                                <% } else { %>
                                  <tr>
                                    <td colspan="6" style="text-align: center;">
                                      No Categories Found!
                                    </td>
                                  </tr>
                                  <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- content-wrapper ends -->
            <!-- partial:../../partials/_footer.html -->
            <%- include('partials/_footer') %>
              <!-- partial -->
          </div>
          <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
  </div>
  <div class="modal fade" tabindex="-1" id="successModal" data-keyboard="false" data-backdrop="static"
    style="margin-top: 310px;">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-body">
          <h4><b>All the products from this category will be lost.</b></h4>
          <h4>Do you really want to delete category?</h4>
        </div>
        <div class="modal-footer">
          <a type="button" id="btnSubmit" data-dissmiss="modal" class="btn btn-success">
            Yes
          </a>
          <a id="btnclose" type="button" data-dissmiss="modal" class="btn btn-success">
            No
          </a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js"
