<body>
  <div class="container-scroller">
    <!-- partial:../../partials/_navbar.html -->
    <%- include('partials/_navbar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        <%- include('partials/_sidebar') %>
          <!-- partial -->
          <div class="main-panel">
            <div class="content-wrapper">
              <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <p class="card-title" style="font-size: 25px;"><b>Add Category</b></p>
                      <form class="forms-sample" method="post" action="/categories/<%= category.category_id %>">
                        <div class="form-group">
                          <label for="exampleInputName1">Name</label>
                          <div style="display: flex;">
                            <input type="text" class="form-control" id="txtname" name="name" 
                              placeholder="Name" style="width: 50%;" value="<%= category.name %>">
                          </div>
                          <span id="nameError" style="color: red;font-size: small;"></span>
                        </div>
                        <div class="form-group">
                          <label for="exampleInputEmail3">Description</label>
                          <textarea class="form-control" id="txtdesc" placeholder="Description" name="description"  style="height: 120px;" ><%= category.description %></textarea>
                        </div>
                        <div class="form-group">
                          <div class="form-check form-check-flat mt-0">
                            <label class="form-check-label">
                              <input type="checkbox" class="form-check-input" id="chkverified" name="is_active" <% if (category.is_active) { %>
                               checked
                              <% } %> > Active
                            </label>
                          </div>
                        </div>
                        <div class="form-group">
                          <span id="error" style="color: red;font-size: medi;">
                            <% if (typeof error !="undefined" && error !="" ) { %>
                              <%= error %>
                                <% } %>
                          </span>
                        </div>
                        <button type="submit" class="btn btn-success mr-2" id="btnSubmit">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- content-wrapper ends -->
            <!-- partial:../../partials/_footer.html -->
            <%- include('partials/_footer') %>
              <!-- partial -->
          </div>
          <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
  </div>
  <script src="/assets/scripts/edit-category.js"></script>
